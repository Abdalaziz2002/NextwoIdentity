@model Product
@{
    ViewData["Title"] = "editpro";
}

<h1>editpro</h1>
<form method="post" asp-action="editpro">
    <!--post it to editemp-->
    @Html.HiddenFor(x=>x.Id)
    <table class="table table-bordered">
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="price"></label></td>
            <td><input asp-for="price" class="form-control" /></td>
        </tr>
        <tr>
            <td><label asp-for="Category!.type"></label></td>
            <td>
                <select asp-for="CategoryId" asp-items="ViewBag.alldept" class="form-control"></select>
                
            </td>
        </tr>
        <tr>
            <td colspan="2"> <input type="submit" value="save" class="btn btn-primary" /> </td>
        </tr>
    </table>
</form>
<a asp-action="allProducts" class="alert-link">go back</a>